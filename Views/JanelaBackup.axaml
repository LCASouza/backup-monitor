				<StackPanel Width="320" Spacing="5">
					<TextBlock Text="Data Inicial:" />
					<DatePicker SelectedDate="{Binding Modelo.DataInicialIncremental}" />
				</StackPanel>

				<StackPanel Width="260" Spacing="5">
					<TextBlock Text="HorÃ¡rio:" />
					<TimePicker SelectedTime="{Binding Modelo.HoraBackupIncremental}" />
				</StackPanel>

				<StackPanel Width="250" Spacing="5">
					<TextBlock Text="FrequÃªncia:" />
					<ComboBox ItemsSource="{Binding Modelo.FrequenciasDisponiveis}"
							  SelectedItem="{Binding Modelo.FrequenciaSelecionadaIncremental}" />
				</StackPanel>
			</StackPanel>

			<StackPanel Orientation="Horizontal" Spacing="10">
				<Button Content="Agendar Backup" Command="{Binding AgendarBackupIncrementalCommand}"
                        Background="DodgerBlue" Foreground="White"/>
				<Button Content="Cancelar Agendamento" Command="{Binding CancelarAgendamentoIncrementalCommand}"
                        Background="Tomato" Foreground="White"/>
			</StackPanel>

			<!-- Status -->
			<Border Background="LightBlue" Padding="10" CornerRadius="5">
				<TextBlock Text="{Binding Modelo.StatusIncremental}" TextWrapping="Wrap" />
			</Border>
		</StackPanel>
	</ScrollViewer>
</Window>
