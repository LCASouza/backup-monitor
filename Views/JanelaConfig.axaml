<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BackupMonitor.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="460" d:DesignHeight="390" WindowStartupLocation="CenterScreen"
        MinWidth="460" MinHeight="390" MaxWidth="460" MaxHeight="390"
        x:Class="BackupMonitor.Views.JanelaConfig"
        x:DataType="vm:JanelaConfigViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Configurações">

	<Design.DataContext>
		<vm:JanelaConfigViewModel/>
	</Design.DataContext>

	<ScrollViewer>
		<StackPanel Margin="20" Spacing="15">
			<TextBlock Text="⚙️ Configurações"
                       FontSize="16" FontWeight="Bold" />

			<StackPanel Orientation="Horizontal" Spacing="15">
				<StackPanel Width="420" Spacing="5">
					<TextBlock Text="Cadeia de conexão Blob Storage" />
					<TextBox Text="{Binding Modelo.CadeiaConexaoAzure}" PasswordChar="*"/>
				</StackPanel>
			</StackPanel>

			<StackPanel Orientation="Horizontal" Spacing="15">
				<StackPanel Width="245" Spacing="5">
					<TextBlock Text="Nome do container Azure" />
					<TextBox Text="{Binding Modelo.ContainerAzure}"/>
				</StackPanel>

				<StackPanel Spacing="5" HorizontalAlignment="Left">
					<TextBlock Text="Sistema Operacional" />
					<ComboBox ItemsSource="{Binding Modelo.SistemaOperacionais}"
							SelectedItem="{Binding Modelo.SistemaOperacional}" Width="140"/>
				</StackPanel>
			</StackPanel>

			<StackPanel Orientation="Horizontal" Spacing="5" Width="300" HorizontalAlignment="Left">
				<StackPanel Width="250" Spacing="5" HorizontalAlignment="Left">
					<TextBlock Text="Senha para acesso" />
					<TextBox Text="{Binding Modelo.Password}" PasswordChar="*"/>
				</StackPanel>

				<Button Content="Gravar senha" Command="{Binding GravarSenhaCommand}"
                        Background="DodgerBlue" Foreground="White" Margin="5 22 0 0"/>
			</StackPanel>

			<Button Content="Gravar configuração" Command="{Binding GravarConfiguracaoCommand}"
                        Background="DodgerBlue" Foreground="White"/>

			<Border Background="LightGray" Padding="10" CornerRadius="5">
				<TextBlock Text="{Binding Modelo.StatusCompleto}" TextWrapping="Wrap" />
			</Border>
        </StackPanel>
	</ScrollViewer>
</Window>
