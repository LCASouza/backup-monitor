            <!-- Nome Banco de Dados -->
            <StackPanel Spacing="5" Width="240">
                <TextBlock Text="Nome do banco de dados" />
                <TextBox Text="{Binding Modelo.DbName}" />
            </StackPanel>

            <!-- Porta -->
            <StackPanel Spacing="5" Width="120">
                <TextBlock Text="Porta de conexÃ£o" />
                <TextBox Text="{Binding Modelo.DbPort}" />
            </StackPanel>
