        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="680" d:DesignHeight="410"
        MinWidth="680" MinHeight="410" MaxWidth="680" MaxHeight="410" WindowStartupLocation="CenterScreen"
        x:Class="BackupMonitor.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Backup Monitor">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

     <StackPanel Margin="20" Spacing="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Spacing="10">
