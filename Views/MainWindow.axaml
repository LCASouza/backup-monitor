            <Button Content="Fazer Backup local" Command="{Binding BackupLocalCommand}" 
                    Background="RoyalBlue" Foreground="White" />

            <Button Content="Fazer Backup no Azure" Command="{Binding BackupDatabaseAzureCommand}" 
                    Background="Green" Foreground="White" />
        </StackPanel>

        <Border Background="LightGray" Padding="10" CornerRadius="5" Margin="0 2 10 0"> 
            <TextBlock Text="{Binding Modelo.Status}" TextWrapping="Wrap" />
        </Border>
    </StackPanel>
</Window>